@model PlatformDTO

@{
    ViewData["Title"] = "Detail platformy";
}


<h1>@ViewData["Title"]</h1>


<h2>@Model.Name</h2>

<p><strong>Rok vzniku:</strong> @Model.YearSince</p>

<p><strong>Popis:</strong> @Model.Description</p>

<div>
    <a class="btn btn-outline-secondary btn-sm" asp-action="Index">🔙 Zpět na seznam platforem</a>
    <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@Model.Id">📝 Editovat</a>
    <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@Model.Id">❌ Smazat</a>
</div>