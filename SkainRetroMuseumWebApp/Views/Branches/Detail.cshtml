@model BranchDTO

@{
    ViewData["Title"] = "Detail pobočky";
}


<h1>@ViewData["Title"]</h1>


<h2>@Model.Name</h2>

<p><strong>Město:</strong> @Model.Town</p>
<p><strong>Adresa:</strong> @Model.Street</p>
<p><strong>E-mail:</strong> @Model.Email</p>
<p><strong>Telefon:</strong> @Model.PhoneNumber</p>
<p><strong>Další informace:</strong> @Model.Note</p>

<div>
    <a class="btn btn-outline-secondary btn-sm" asp-action="Index">🔙 Zpět na seznam poboček</a>
    <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@Model.Id">📝 Editovat</a>
    <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@Model.Id">❌ Smazat</a>
</div>